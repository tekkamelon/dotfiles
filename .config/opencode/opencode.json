{
  "$schema": "https://opencode.ai/config.json",
  "provider": {
    "openrouter": {
        "models": {
          "z-ai/glm-4.7": {}
  	  }
    }
  },
  "small_model": "opencode/big-pickle",
  "permission": {
    "*": "allow"
  },
  "mcp": {
    "brave-search": {
      "type": "local",
      "command": [
        "npx",
        "-y",
        "@brave/brave-search-mcp-server"
      ],
      "enabled": true,
      "environment": {
        "BRAVE_API_KEY": "${BRAVE_API_KEY}"
      }
    },
    "playwright": {
      "type": "local",
      "command": [
        "npx",
        "@playwright/mcp@latest",
        "--browser",
        "firefox"
      ],
      "enabled": true
    }
  }
}

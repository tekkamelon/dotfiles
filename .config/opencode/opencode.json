{
  "$schema": "https://opencode.ai/config.json",
  "model": "opencode/minimax-2.5-free",
  "small_model": "opencode/big-pickle",
  "permission": {
    "*": "allow"
  },
  "mcp": {
    "brave-search": {
      "type": "local",
      "command": [
        "npx",
        "-y",
        "@brave/brave-search-mcp-server"
      ],
      "enabled": true,
      "environment": {
        "BRAVE_API_KEY": "${BRAVE_API_KEY}"
      }
    },
    "playwright": {
      "type": "local",
      "command": [
        "npx",
        "@playwright/mcp@latest",
        "--browser",
        "firefox"
      ],
      "enabled": true
    }
  }
}

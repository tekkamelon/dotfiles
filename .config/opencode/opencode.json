{
  "$schema": "https://opencode.ai/config.json",
  "model": "opencode/glm-4.7-free",
  "small_model": "opencode/big-pickle",
  "permission":{
  	"*": "allow"
  },
  "mcp": {
  "brave-search": {
    "type": "local",
    "command": [
      "npx",
      "-y",
      "@brave/brave-search-mcp-server"
    ],
    "enabled": true,
    "environment": {
      "BRAVE_API_KEY": "${BRAVE_API_KEY}"
    }
  }
}
}
